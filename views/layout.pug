doctype html
html
	head
		title Home | #{siteName}
		link(rel="stylesheet", type="text/css" href="/css/bootstrap.min.css")
		link(rel="stylesheet", type="text/css" href="/css/animate.css")
		link(rel="stylesheet", type="text/css" href="/css/font-awesome.min.css")
		link(rel="stylesheet", type="text/css" href="/css/main.css")
		link(rel="stylesheet", type="text/css" href="/css/responsive.css")
	body
		header#header(role="banner")
			block header
				div.main-nav
					div.container
						div.header-top
							div.pull-right.social-icons
								a(href="#")
									i.fa.fa-twitter
								a(href="#")
									i.fa.fa-facebook
								a(href="#")
									i.fa.fa-google-plus
								a(href="#")
									i.fa.fa-youtube
							div.row
								div.navbar-header
									button(type="button",class="navbar-toggle",data-toggle="collapse",data-target=".navbar-collapse")
										span.sr-only  Toggle navigation
										span.icon-bar
										span.icon-bar
										span.icon-bar
									a.navbar-brand(href="index.html")
										img.img-responsive(src="/images/logo.png",alt="logo")

								div.collapse.navbar-collapse
									ul.nav.navbar-nav.navbar-right
										each item in menu
											li.scroll
												a(href=item.slug) #{item.title}
		section#home
			div#main-slider.carousel.slide(data-ride="carousel")
				ol.carousel-indicators
					li.active(data-target="#main-slider", data-slide-to="0")
					li(data-target="#main-slider", data-slide-to="1")
					li(data-target="#main-slider", data-slide-to="2")
				div.carousel-inner
					div.item.active
						img.img-responsive(src="/images/slider/bg1.jpg", alt="slider")
						div.carousel-caption
							h2 register for our next event
					div.item
						img.img-responsive(src="/images/slider/bg2.jpg", alt="slider")
						div.carousel-caption
							h2 register for our next event
					div.item
						img.img-responsive(src="/images/slider/bg3.jpg", alt="slider")
						div.carousel-caption
							h2 register for our next event
		<!--/#home-->
		section#content
			block content
		div.footer
			block footer